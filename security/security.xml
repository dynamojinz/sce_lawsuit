<odoo>
    <data>
        <record model="res.groups" id="lawsuit_user">
            <field name="name">Lawsuit / User</field>
        </record>
        <record model="res.groups" id="lawsuit_admin">
            <field name="name">Lawsuit / Administrator</field>
        </record>
        <record model="res.groups" id="lawsuit_manager">
            <field name="name">Lawsuit / Manager</field>
        </record>
        <record id="only_edit_reponsible_lawsuit" model="ir.rule">
            <field name="name">Only responseble person can edit</field>
            <field name="model_id" ref="model_sce_lawsuit_lawsuit"/>
            <field name="groups" eval="[(4, ref('sce_lawsuit.lawsuit_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                [('response_user_id','=',user.id)]
            </field>
        </record>
    </data>
</odoo>
